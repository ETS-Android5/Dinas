<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="header">
        <item name="android:textColor">@color/headerColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="isRes">
        <item name="android:textColor">@color/isResColor</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="text">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DinasTheme" parent="AppTheme" >
        <item name="colorPrimary">@color/borderColor</item>
    </style>


    <style name="PurpleButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#1a237e</item>
        <item name="colorControlHighlight">#673ab7</item>
    </style>
</resources>

